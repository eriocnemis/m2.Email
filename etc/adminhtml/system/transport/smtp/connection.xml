<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd">
    <!-- smtp connection setting -->
    <field id="host" translate="label comment" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
        <label>Host</label>
        <comment>Either Hostname or IP address.</comment>
        <depends>
            <field id="transport">smtp</field>
        </depends>
    </field>
    <field id="port" translate="label comment" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
        <label>Port</label>
        <comment>Usually is 25, 587 or 465. Please consult with your service provider.</comment>
        <depends>
            <field id="transport">smtp</field>
        </depends>
    </field>
    <field id="ssl" translate="label" type="select" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
        <label>Connection Security</label>
        <source_model>Eriocnemis\Email\Model\Config\Source\Ssl</source_model>
        <depends>
            <field id="transport">smtp</field>
        </depends>
    </field>
</include>
