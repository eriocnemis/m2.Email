<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd">
    <!-- file setting -->
    <field id="path" translate="label comment" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
        <label>Dir Path</label>
        <comment>The path under which mail files will be written.</comment>
        <depends>
            <field id="transport">file</field>
        </depends>
    </field>
    <field id="prefix" translate="label comment" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
        <label>Filename Prefix</label>
        <comment>The prefix for a message file.</comment>
        <depends>
            <field id="transport">file</field>
        </depends>
    </field>
    <field id="extension" translate="label comment" type="text" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
        <label>Filename Extension</label>
        <comment>The extension for a message file.</comment>
        <depends>
            <field id="transport">file</field>
        </depends>
    </field>
</include>
